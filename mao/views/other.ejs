<div class='liuyan'>
	<h3>留言板</h3>
	<form action="/" method="post" style='padding: 5px;'>
    	<div><h4>用户：</h4><input type='text' name="biaoti" class='form-control' style='width:350px'/></div>	
    	<div><h4>内容：</h4><textarea name='con'></textarea></div>
    	<button type="submit" class='btn btn-default'>发送留言</button>
</form>
	
</div>
<div class="show">
	<h3>留言板</h3> 
	<table class='table' id="tb">
		<tr>
			<td>楼层</td>
			<td>标题</td>
			<td>内容</td>
			
		</tr>
	  	<% litem.reverse().forEach(function(con,index){ %>
	  		<tr>
	  			<td><%= index+1 %>楼</td>
		 			<td><%- con.biaoti %></td>
		 			<td><%- con.con %></td>
	 			</tr>
	  	<% }) %>
	  </table>
</div>
			